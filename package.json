{
  "name": "balmy-token-lister",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsconfig-replace-paths -s src -p tsconfig.json",
    "lint:check": "prettier --check './**'",
    "lint:fix": "sort-package-json && prettier --write './**' ",
    "start": "node --trace-warnings --abort-on-uncaught-exception --unhandled-rejections=strict dist/index.js",
    "watch": "nodemon -r tsconfig-paths/register src/balmy/index.ts --ignore 'tokenList.json'"
  },
  "lint-staged": {
    "*.{js,md,ts,json}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@mean-finance/sdk": "^0.0.185"
  },
  "devDependencies": {
    "@types/node": "^20.10.7",
    "@types/ws": "^8.5.10",
    "husky": "^8.0.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sort-package-json": "^2.6.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "^5.3.3"
  }
}
